<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
          <div class="modal-header border-bottom-0">
              <button type="button" class="btn-close" aria-label="Close" data-dismiss="modal"></button>
          </div>
          <div class="modal-body">
              <div class="form-title text-center">
                  <h4>Registreer</h4>
              </div>
              <div class="d-flex flex-column text-center">
                  <form action="/register" method="post" oninput='password2.setCustomValidity(password2.value != password.value ? "Passwords do not match." : "")'>
                      <div class="form-group mt-3">
                          <input type="text" class="form-control" id="username" name="username" placeholder="uw gebruikersnaam" required>
                      </div>
                      <div class="form-group mt-3">
                          <input type="password" class="form-control" id="password" name="password" placeholder="uw wachtwoord" required>
                      </div>
                      <div class="form-group mt-3">
                          <input type="password" class="form-control" id="password2" name="password2" placeholder="bevestig wachtwoord" required>
                      </div>
                      <button type="submit" class="btn btn-outline-warning me-2 mt-4">Registreer</button>
                  </form>
              </div>
          </div>
      </div>
  </div>
</div>