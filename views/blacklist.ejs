<!doctype html>
<html lang="nl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Blacklist</title>
    <%- include("partials/linksAndScripts") %>
</head>
<body>
    <header>
        <!-- navbar -->
        <%- include("partials/navbar") %>
    </header>
    <main>
        <!-- profile modal -->
        <%- include("partials/profile") %>
        
        <section class="container">
            <h1 class="text-center">Blacklist</h1>
            <table class="table table-bordered mx-4" id="blacklist">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Naam</th>
                        <th scope="col">Foto</th>
                        <th scope="col">Reden</th>
                        <th scope="col">Verwijder</th>
                    </tr>
                </thead>
                <tbody>
                    <% minifigsShow.forEach((minifig, index) => { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= minifig.name %></td>
                            <td><img src="<%= minifig.set_img_url %>" alt="<%= minifig.name %>" width="168"></td>
                            <td>Onbekend</td>
                            <td><button type="button" class="btn"><img src="../images/deleteButton.png" width="48"></button></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </main>
    <footer class="py-3 mt-5">
        <%- include("partials/footer") %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>